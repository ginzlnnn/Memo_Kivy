# File name: memo.kv
#:kivy 1.9.0
#:import memo memo
#:include menubar.kv	
#:include desk.kv			
#:include statusbar.kv

<Memo>:
    name: 'memo'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MenuBar:
            id: _menu_bar
            desk: _desk
            memo: root
            size_hint: None,None
            width:100
            height: root.height

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Desk:
            id: _desk
            status_bar: _status_bar
			menubar:_menu_bar
            size_hint: None, None
            width: root.width - _menu_bar.width
            height: root.height - _status_bar.height 
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
         
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        StatusBar:
            id: _status_bar
            size_hint: None, None
            height: 30
            width: root.width - _menu_bar.width
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size         
