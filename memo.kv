# File name: memo.kv
#:kivy 1.9.0
#:import memo memo
#:include menubar.kv	
#:include desk.kv			
#:include statusbar.kv

<Memo>:
    name: 'memo'
    desk: _desk
    menubar: _menu_bar
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
			orientation: 'horizontal'
			id: _head
			size_hint: 1,None
			height: 50
			RelativeLayout:
				id: _logo
				size_hint: None,1
				width: 110
				Label:
					text: "    MEMO"
					halign: "right"
					canvas:
						Color:
							rgba: 1, 1, 1, 1
						Rectangle:
							source: 'memo.png'
							pos: self.pos
							size: 50,50
			RelativeLayout:
				id: _title_bar
				size_hint: None,1
				width: root.width - _logo.width - _setting.width
				Label:
					text: "note" if root.desk.filechooser.rootpath == 'note' else "picture"
					font_size: root.menubar.font_menu_size * 1.5
					canvas.before:
						Color:
							rgba: root.titlebar_red, root.titlebar_green, root.titlebar_blue, 1
						Rectangle:
							pos: self.pos
							size: self.size
						Color:
							rgba: 0, 0, 0, .2
						Rectangle:
							pos: self.center_x - 50, self.center_y - 25
							size: 100,50
            RelativeLayout:
				id: _setting
				size_hint: None,1
				width: 80
				Button:
					text: "setting"
					on_release: root.setting()
        
        RelativeLayout:
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                MenuBar:
                    id: _menu_bar
                    desk: _desk
                    memo: root
                    size_hint: None,None
                    width:110
                    height: root.height - _head.height
        
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                Desk:
                    id: _desk
                    status_bar: _status_bar
    	    		menubar:_menu_bar
                    memo: root
                    size_hint: None, None
                    width: root.width - _menu_bar.width
                    height: root.height - _status_bar.height
                    canvas.before:
						Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
							source: root.wallpaper
                            pos: self.pos
                            size: self.size
                 
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                StatusBar:
                    id: _status_bar
                    size_hint: None, None
                    height: 30
                    width: root.width - _menu_bar.width
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

<Setting>
	BoxLayout:
        orientation: "vertical"
        spacing: 10
		Label:
			text: "Theme"
			size_hint: None, None
			height: 30
			font_size: root.font_size
		ColorPicker:
			color: root.color
			on_color: root.set_color(self.color)	
		Label:
			text: "Text Size"
			size_hint: None, None
			height: 30
			font_size: root.font_size
		BoxLayout:
            orientation: "horizontal"
			padding: 10
			size_hint_y: None
            height: 40
			ToggleButton:
				text:"small"
				group: 'textsize'
				on_state: 
					if self.state == 'down': root.set_textsize(12)
			ToggleButton:
				text:"medium"
				group: 'textsize'
				on_state: 
					if self.state == 'down': root.set_textsize(14)
			ToggleButton:
				text:"large"
				group: 'textsize'
				on_state: 
					if self.state == 'down': root.set_textsize(16)
		Label:
			text: "Wallpaper"
			size_hint: None, None
			height: 30
			font_size: root.font_size
		BoxLayout:
            orientation: "horizontal"
			padding: 10
			size_hint_y: None
            height: 40
			Label:
				id: wallpaper
				text: str(root.wallpaper)
				font_name: 'Waree'
				size_hint_x: None
				width: 500
			Button:
                text: "Load"
				on_release: root.load_wallpaper()
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
			Button:
                text: "default"
				font_size: root.font_size
                on_release: root.default()
			Button:
                text: "Close"
				wallpaper: wallpaper
				font_size: root.font_size
                on_release: root.close(wallpaper.text)
				

