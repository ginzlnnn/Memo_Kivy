# File name: menubar.kv
#:kivy 1.9.0
#:import desk desk

<Desk>
	filechooser: _filechooser
    orientation: 'vertical'
	Label:
		text: 'note' if self.parent.filechooser.rootpath == 'note' else 'picture'
		font_size: root.font_menu_size
		size_hint: 1, 0.1
		canvas.before:
            Color:
                rgba: root.theme_red, root.theme_green, root.theme_blue, 1
            Rectangle:
                pos: self.pos
                size: self.size
			
	FileChooserIconView:
        id: _filechooser
		rootpath: 'note'
        on_selection: root.selected(_filechooser.selection)
		on_entry_added: root.file_count(_filechooser.path)
		
<FileChooserIconView>:
    layout: layout
    FileChooserIconLayout:
        id: layout
        controller: root

[FileIconEntry@Widget]:
    locked: False
    path: ctx.path
    selected: self.path in ctx.controller().selection
    size_hint: None, None

    on_touch_down: self.collide_point(*args[1].pos) and ctx.controller().entry_touched(self, args[1])
    on_touch_up: self.collide_point(*args[1].pos) and ctx.controller().entry_released(self, args[1])
    size: '100dp', '100dp'

    canvas:
        Color:
            rgba: 1, 1, 1, 1 if self.selected else 0
        BorderImage:
            border: 8, 8, 8, 8
            pos: root.pos
            size: root.size
            source: 'atlas://data/images/defaulttheme/filechooser_selected'

    Image:
        size: '48dp', '48dp'
        source: 'atlas://data/images/defaulttheme/filechooser_%s' % ('folder' if ctx.isdir else 'file')
		pos: root.x + dp(24), root.y + dp(40)
    Label:
        text: ctx.name
        text_size: (root.width, self.height)
		font_name: 'Waree'
		font_size: 12
        halign: 'center'
        shorten: True
        size: '100dp', '16dp'
        pos: root.x, root.y + dp(16)
    Label:
        text: '{}'.format(ctx.get_nice_size())
        font_size: '11sp'
        color: .8, .8, .8, 1
        size: '100dp', '16sp'
        pos: root.pos
		halign: 'center'
		
