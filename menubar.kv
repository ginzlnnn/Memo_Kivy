# File name: menubar.kv
#:kivy 1.9.0
#:import menubar menubar

<MenuBar>:
    name: 'menu_bar'
    BoxLayout:
        orientation: 'vertical'
	    Button:
	        text: 'Add Note'
	        on_press: app.root.current = 'note'
	    Button:
	        text: 'View note'
            on_release: root.open(root.desk.filechooser.path, root.desk.filechooser.selection)
	    Button:
	        text: 'Delete note'
