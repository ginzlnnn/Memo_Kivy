# File name: menubar.kv
#:kivy 1.9.0
#:import menubar menubar

<MenuBar>:
    name: 'menu_bar'

    BoxLayout:
        orientation: 'vertical'
	    Button:
	        text: 'Add Note'
	        on_press: app.root.current = 'note'
	    Button:
	        text: 'View note'
            on_release: root.open(root.desk.filechooser.path, root.desk.filechooser.selection)
	    Button:
	        text: 'Delete note'
			on_release: root.show_delete()

<ShowText>:
    BoxLayout:
        id: contentbox
        orientation: "vertical"
        ScrollView:
            Label:
                id: content_text
                size_hint_y: None
                height: self.texture_size[1]
                text: root.text
                text_size: (self.width-20), None
                line_height: 1.5
                valign: "top"

        Button:
            text: "Close"
            size_hint_y: None
            height: "40dp"
            on_press: root.cancel()
			
<DeleteFile>:
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Are you sure that you want to delete this file"
		BoxLayout:
			size_hint_y: None
            height: 30
			Button:
                text: "No"
                on_release: root.no()
            Button:
                text: "Yes"
				on_release: root.delete()
